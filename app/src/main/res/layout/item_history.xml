<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#28303E"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHistoryLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bandung Electronic Center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHistorySlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot P1 Mobil - A5"
            android:textColor="#E0E0E0"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvHistoryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu: 16 Jun 2025, 15:00"
            android:textColor="#B0B0B0"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnEndParking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selesaikan Parkir"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>