<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/card_background_dark"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHistoryLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bandung Electronic Center"
            android:textColor="@color/text_primary_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHistorySlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Slot P1 Mobil - A5"
            android:textColor="@color/text_secondary_dark" />

        <TextView
            android:id="@+id/tvHistoryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Waktu: 16 Jun 2025, 15:00"
            android:textColor="@color/text_secondary_dark" />

        <TextView
            android:id="@+id/tvHistoryDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Durasi: 1 jam"
            android:textColor="@color/text_secondary_dark" />

        <TextView
            android:id="@+id/tvHistoryPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Harga: Rp5.000"
            android:textColor="@color/text_secondary_dark" />

        <TextView
            android:id="@+id/tvHistoryPaymentMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Metode: QRIS"
            android:textColor="@color/text_secondary_dark" />

        <Button
            android:id="@+id/btnEndParking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/accent_red"
            android:text="Selesaikan Parkir"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>